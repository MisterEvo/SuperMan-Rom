##
# INSTALLATION PROCESS
#

if prop("menu.prop","selected")== "1" then

ini_set("text_next", "Next");
ini_set("icon_next", "@next");

install(
	"SuperMan-Rom™ Installation",
	getvar("rom_name") + "\n" +
	"Please wait while SuperMan-Rom is conquering your phone" +
	"",
	"icons/install2"
);

if prop("csc.prop","csc")=="none" then
alert("Reminder:", "You did not choose to install the stock CSC. Please flash your CSC right after this zip to avoid errors!");
endif;

ini_set("text_next", "Finish");
ini_set("icon_next", "@finish");
endif;
