assert(getprop("ro.product.device") == "hero2lte" || getprop("ro.build.product") == "hero2lte" || getprop("ro.product.name") == "hero2lte" ||
	abort("This package is for \"hero2lte\" devices; this is a \"" + getprop("ro.product.device") + "\"."););
assert(getprop("") == "" ||
	abort("This package is for \"\"; this is \"" + getprop("") + "\"."););
